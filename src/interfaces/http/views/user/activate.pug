extends ../layout
block content
  .uk-section
    .uk-container.uk-container-expand
      .uk-flex.uk-flex-center
        .uk-card.uk-card-default.uk-card-hover.uk-card-body(
          class='uk-width-1-4@l uk-width-1-1@s uk-width-1-2@m')
          h3.uk-card-title.uk-text-center #{title}
          hr
          form(
            id='activate'
            action='/activate'
            method='POST')
          input(
            form='activate'
            type='hidden'
            name='_csrf'
            value=_csrf)
          .uk-inline.uk-width-1-1.uk-margin-large-top
            span.uk-form-icon.uk-form-icon-flip(
              uk-icon='icon: mail')
            input.uk-input.uk-form-large(
              form='activate'
              name='email'
              required=''
              placeholder='Email Address'
              type='text'
              uk-tooltip="title: Provide your e-mail again; delay: 2000")
          .uk-inline.uk-width-1-1.uk-margin
            span.uk-form-icon.uk-form-icon-flip(
              uk-icon='icon: lock')
            input.uk-input.uk-form-large(
              form='activate'
              name='activationCode'
              required=''
              placeholder='Activation Code'
              type='text'
              uk-tooltip="title: Activation code from email; delay: 2000")
          button.uk-button.uk-button-primary.uk-width-1-1.uk-margin-large-top(
            form='activate'
            type='submit') Activate

