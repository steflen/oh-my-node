extends ../layout

block content

  .uk-section
    .uk-container.uk-container-expand
      .uk-flex.uk-flex-center
        .uk-card.uk-card-default.uk-card-hover.uk-card-body(class='uk-width-1-4@l uk-width-1-1@s uk-width-1-2@m')
          h3.uk-card-title.uk-text-center Create Account
          hr
          form(method='POST')
            input(type='hidden', name='_csrf', value=_csrf)
            .uk-inline.uk-width-1-1
              span.uk-form-icon.uk-form-icon-flip(uk-icon='icon: user')
              input.uk-input.uk-form-large(required='',  name='username', id='username', placeholder='Username', type='text')
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon.uk-form-icon-flip(uk-icon='icon: lock')
                input.uk-input.uk-form-large(required='', name='password', id='password', placeholder='Password', type='password')
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon.uk-form-icon-flip(uk-icon='icon: lock')
                input.uk-input.uk-form-large(required='', name='confirm_password', id='confirm_password',placeholder='Confirm Password', type='password')
              button.uk-button.uk-button-primary.uk-width-1-1.uk-margin(type='submit') Signup
              a.uk-button.uk-button-text.uk-width-1-1.uk-margin(href='/login') Back to Login

